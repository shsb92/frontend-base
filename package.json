{
  "name": "frontend-base",
  "version": "1.0.0",
  "description": "This will serve as the base to all frontend-projects I will build in the future",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,css,md}\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shsb92/frontend-base.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/shsb92/frontend-base/issues"
  },
  "homepage": "https://github.com/shsb92/frontend-base#readme",
  "dependencies": {
    "axios": "^1.6.7"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.17",
    "@testing-library/dom": "^10.4.0",
    "@types/node": "22.13.14",
    "@typescript-eslint/eslint-plugin": "8.28.0",
    "@typescript-eslint/parser": "^7.0.1",
    "@vitejs/plugin-basic-ssl": "2.0.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.0.0-alpha.0",
    "eslint-config-prettier": "10.1.1",
    "husky": "^9.0.11",
    "jsdom": "26.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.5.3",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.0.17",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4"
}
